{
    "name": "tapsy-backend",
    "version": "1.0.0",
    "description": "Backend server for the Tapsy project, built with Node.js, Express.js, TypeScript, PostgreSQL, and Prisma ORM.",
    "main": "server.js",
    "scripts": {
      "dev": "nodemon",
      "build": "tsc",
      "start": "node dist/server.js",
      "lint": "eslint \"src/**/*.{ts,js}\"",
      "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
      "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
      "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
      "prepare": "husky",
      "type-check": "tsc --noEmit",
      "test": "jest --passWithNoTests"
    },
    "author": "Mechlin technologies",
    "license": "ISC",
    "devDependencies": {
      "@eslint/js": "^9.32.0",
      "@types/cors": "^2.8.19",
      "@types/express": "^5.0.3",
      "@types/node": "^24.2.0",
      "@types/nodemailer": "^6.4.17",
      "@types/swagger-jsdoc": "^6.0.4",
      "@types/swagger-ui-express": "^4.1.8",
      "@typescript-eslint/eslint-plugin": "^8.39.0",
      "@typescript-eslint/parser": "^8.39.0",
      "eslint": "^9.32.0",
      "eslint-config-prettier": "^10.1.8",
      "eslint-plugin-import": "^2.32.0",
      "eslint-plugin-jsdoc": "^52.0.4",
      "eslint-plugin-prettier": "^5.5.4",
      "eslint-plugin-security": "^3.0.1",
      "eslint-plugin-simple-import-sort": "^12.1.1",
      "globals": "^16.3.0",
      "husky": "^9.1.7",
      "lint-staged": "^16.1.5",
      "nodemon": "^3.1.10",
      "prettier": "^3.6.2",
      "prisma": "^6.13.0",
      "swagger-jsdoc": "^6.2.8",
      "swagger-ui-express": "^5.0.1",
      "ts-node": "^10.9.2",
      "typescript": "^5.9.2",
      "typescript-eslint": "^8.39.0",
      "jest": "^29.7.0",
      "@types/jest": "^29.5.14",
      "ts-jest": "^29.2.5"
    },
    "dependencies": {
      "@prisma/client": "^6.13.0",
      "@types/jsonwebtoken": "^9.0.10",
      "cors": "^2.8.5",
      "dotenv": "^17.2.1",
      "express": "^5.1.0",
      "firebase-admin": "^13.4.0",
      "jsonwebtoken": "^9.0.2",
      "morgan": "^1.10.1",
      "nodemailer": "^7.0.5"
    },
    "lint-staged": {
      "src/**/*.{ts,js}": [
        "eslint --fix",
        "prettier --write"
      ]
    }
  }