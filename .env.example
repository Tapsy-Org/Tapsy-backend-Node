# ===========================================
# Tapsy Backend Environment Variables
# ===========================================
# Copy this file to .env.development and fill in your actual values
# For production, copy to .env and update values accordingly

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/tapsy_db

# ===========================================
# JWT Authentication
# ===========================================
# Generate strong secrets for production
# You can use: openssl rand -base64 64
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-here
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ===========================================
# Redis Configuration
# ===========================================
# Redis connection string for caching and sessions
REDIS_URL=redis://localhost:6379

# ===========================================
# AWS S3 Configuration
# ===========================================
# AWS credentials for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# ===========================================
# Firebase Configuration
# ===========================================
# Firebase Admin SDK credentials for push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=\"-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY_HERE\\n-----END PRIVATE KEY-----\\n\"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-firebase-client-email%40project.iam.gserviceaccount.com

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
# SendGrid API key for sending emails
SG_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# SMS Configuration (Twilio) - Optional
# ===========================================
# configure if using SMS features
TWILLIO_SID=your-twilio-account-sid
TWILLIO_AUTH_TOKEN=your-twilio-auth-token
TWILLIO_NUM=your-twilio-phone-number

# ===========================================
# External APIs - Optional
# ===========================================
# Google Maps API for location services
GOOGLE_API_KEY=your-google-maps-api-key

# Google Gemini API for AI features
GEMINI_API_KEY=your-gemini-api-key

# Onboarding video URL
ONBOARDING_VIDEO_URL=https://your-domain.com/onboarding-video.mp4

# ===========================================
# Development/Testing
# ===========================================
# JWT_SECRET=test-jwt-secret
# REFRESH_TOKEN_SECRET=test-refresh-secret